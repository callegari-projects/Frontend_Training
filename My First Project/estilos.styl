@import "iconos.styl"

a
	color #00F

a:visited
	color	#00D

body
	background #CBF5F5
	color #333
	font-family "Open Sans"
	font-size 16px
	text-align left

header
	background #222
	border-botton 3px solid #0AF
	color #DDD
	margin 0
	padding 0.5em
	position fixed
	width 100%

	img
		width 100%

	h1
		font-family "Nunito"
		font-size 20px
		font-weight normal
		margin 0
		padding 0

	#avatar, #logo, #titulo_nav
		display inline-block
		vertical-align top

	#logo, #avatar
		height 40px
		width 40px

	#avatar a
		background #444
		display block
		text-decoration none
		margin 0
		padding 3px
		
	#titulo_nav
		width 70%

	#titulo_nav nav a
		color white
		border-botton 4px solid #0AF
		border-left 1px solid #0AF
		border-right 1px solid #0AF
		font-size 0.8em
		padding 0.1em 0.1em
		text-decoration none
		

	#titulo_nav nav a:hover
		border-color white	

#contenido
	padding 4em 0.5em

	#nota
		background #FAFAD6
		border-radius 1em
		font-size 0.7em
		height 1em
		margin 1em
		overflow hidden
		padding 0 2em
		text-align justify
		transition all 0.5s ease

	#nota:hover
		height 8em

	.item
		background white
		border 2px solid #DDD
		border-radius 0.5em
		margin 0.5em 0 0 0
		padding 0.5em
		overflow hidden
		

		.titulo_item, .votos
			display inline-block
			vertical-align top
			
		
		.votos
			text-align center
			width 14%

			a
				text-decoration none
				transition all 1s ease

			a:hover
				font-size 1.3em

			.down
				color #FFB341

			.up
				color #4B8FF5
		

		.titulo_item
			width 80%
			float right
			font-family "Open Sans"
			
			p
				font-size 0.9em
				font-weight bold
				margin 0
				padding 0


		.autor
			font-size 0.7em
			text-align left
			float right
			width 80%


			p
				display inline
				margin 0
				padding 0

			.icon-heart2
				color #f66
				cursor pointer
				display inline-block
				font-size 1.3em
				vertical-align middle

			.icon-heart2:hover:before
				color hotpink
				content: "\e601"

			.tag
				background #80CCB2
				display inline-block
				color white
				font-weight bold
				padding 0.3em
				border-radius 0.5em
				cursor pointer
				margin 0 0 2px 1em

		.foto
			display: none;
	

@import "responsive.styl"